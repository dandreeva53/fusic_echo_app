rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userEmail} {
      allow read: if request.auth != null && request.time > resource.data.lastRead + duration.value(1, 's');

      allow create, update, delete: if request.auth != null
                                    && request.auth.token.email == userEmail;

      match /scans/{scanId} {
        allow read, create, update, delete: if request.auth != null
                                            && request.auth.token.email == userEmail;
      }
    }

    match /slots/{slotId} {
      allow read: if request.auth != null;

      // Create: signed-in users only
      allow create: if request.auth != null
        && request.resource.data.status in ['available', 'unavailable', 'event']
        && (
          request.resource.data.status == 'event'
          || request.resource.data.supervisor == request.auth.token.email
        );

      // Update:
      // - owner can edit everything
      // - others can only change bookings + bookedBy (book/unbook)
      allow update: if request.auth != null
        && (
          resource.data.supervisor == request.auth.token.email
          || request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(['bookings', 'bookedBy'])
        );

      // Delete: only owner
      allow delete: if request.auth != null
        && resource.data.supervisor == request.auth.token.email;
    }
  }
}
